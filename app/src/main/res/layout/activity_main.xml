    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/blokusgame.mi.android.hazi.blokus"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:panelHeight="68dp"
        sothree:shadowHeight="4dp"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
           <View.BoardView
                android:id="@+id/boardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/playerTurn"
                android:textColor="#ff063dff"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/playerTxt"
                android:layout_below="@+id/boardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtStep"
                android:id="@+id/btnStep"
                android:layout_below="@+id/playerTurn"
                android:layout_toStartOf="@+id/btnReset" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtreset"
                android:id="@+id/btnReset"
                android:layout_alignTop="@+id/btnStep"
                android:layout_alignParentEnd="true" />
            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnReset">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:id="@+id/rotations_layout">

                    </LinearLayout>
            </HorizontalScrollView>

        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/horizontal_layout">
            </LinearLayout>
        </HorizontalScrollView>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

